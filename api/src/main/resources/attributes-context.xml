<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="facilityServiceConfig" class="cz.metacentrum.perun.spRegistration.common.configs.AttrsConfig">
        <constructor-arg name="attrsProps" ref="facilityServiceAttributes" />
        <constructor-arg name="appConfig" ref="appConfig" />
        <constructor-arg name="perunAdapter" ref="perunAdapter" />
        <constructor-arg name="category" value="SERVICE"/>
    </bean>

    <bean id="facilityOrganizationConfig" class="cz.metacentrum.perun.spRegistration.common.configs.AttrsConfig">
        <constructor-arg name="attrsProps" ref="facilityOrganizationAttributes" />
        <constructor-arg name="appConfig" ref="appConfig" />
        <constructor-arg name="perunAdapter" ref="perunAdapter" />
        <constructor-arg name="category" value="ORGANIZATION"/>
    </bean>

    <bean id="facilitySamlConfig" class="cz.metacentrum.perun.spRegistration.common.configs.AttrsConfig">
        <constructor-arg name="attrsProps" ref="facilitySamlAttributes" />
        <constructor-arg name="appConfig" ref="appConfig" />
        <constructor-arg name="perunAdapter" ref="perunAdapter" />
        <constructor-arg name="category" value="PROTOCOL"/>
    </bean>

    <bean id="facilityOidcConfig" class="cz.metacentrum.perun.spRegistration.common.configs.AttrsConfig">
        <constructor-arg name="attrsProps" ref="facilityOidcAttributes" />
        <constructor-arg name="appConfig" ref="appConfig" />
        <constructor-arg name="perunAdapter" ref="perunAdapter" />
        <constructor-arg name="category" value="PROTOCOL"/>
    </bean>

    <bean id="facilityAccessControlConfig" class="cz.metacentrum.perun.spRegistration.common.configs.AttrsConfig">
        <constructor-arg name="attrsProps" ref="facilityAccessControlAttributes" />
        <constructor-arg name="appConfig" ref="appConfig" />
        <constructor-arg name="perunAdapter" ref="perunAdapter" />
        <constructor-arg name="category" value="ACCESS_CONTROL"/>
    </bean>

</beans>